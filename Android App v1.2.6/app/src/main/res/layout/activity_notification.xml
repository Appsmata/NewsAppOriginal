<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="230dp">
    <RelativeLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="230dp">

        <ImageView
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:src="@drawable/bbr"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:id="@+id/image_view_notif_item" />
        <TextView
            android:layout_margin="10dp"
            android:textSize="13dp"
            android:padding="5dp"
            android:textStyle="bold"
            android:text="Category"
            android:textColor="@android:color/white"
            android:background="#66000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:id="@+id/text_view_category_notif_item" />
        <TextView
            android:layout_margin="10dp"
            android:textSize="10dp"
            android:padding="5dp"
            android:textStyle="bold"
            android:text="3 HOURS AGO"
            android:textColor="@android:color/white"
            android:background="#66000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/text_view_time_notif_item" />

        <TextView
            android:text="Le titre de l'article qui recevoi dans les notification merci indian persoone "
            android:paddingTop="30dp"
            android:textSize="16sp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:gravity="bottom"
            android:textColor="@android:color/white"
            android:background="@drawable/color_gradient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_View_title_notif_item"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>

</LinearLayout>

